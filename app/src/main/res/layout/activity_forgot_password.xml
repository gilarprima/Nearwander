<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
              android:gravity="center"
              tools:context="com.nearwander.application.nearwander.ForgotPasswordActivity"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:text="@string/forgot_pass"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="InefficientWeight"
        android:layout_weight="0.20">

        <EditText
            android:id="@+id/forgotEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/forgotEmail"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnForgotPasswordUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_orange_light"
            android:elevation="4dp"
            android:onClick="btnForgotPasswordUser_Click"
            android:text="@string/btn_forgot_pass"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@android:color/holo_orange_dark"
            android:textSize="18sp"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.08"
        android:backgroundTint="@android:color/holo_purple"
        android:elevation="4dp"
        android:onClick="btnForgotPasswordUser_Click"
        android:text="@string/btnBack"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@android:color/holo_orange_dark"
        android:textSize="18sp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</LinearLayout>

